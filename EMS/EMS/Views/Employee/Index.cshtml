@model IEnumerable<EMS.Models.BusinessBase.EmployeeB>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="product-status mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap drp-lst">
                    <h4>Employee List</h4>
                    <div class="add-product">
                        <a href="/Employee/Create">Add Employee</a>
                    </div>
                    <div class="asset-inner">
                        <table id="tbl">
                            <thead>
                                <tr>
                                    <th>EMPLOYEE ID</th>
                                    <th>EMPLOYEE NAME</th>
                                    <th>GENDER</th>
                                    <th>NID</th>
                                    @*<th>JOINING DATE</th>*@
                                    @*<th>STATUS</th>*@
                                    <th>BASIC SALARY</th>
                                    <th>GROSS WAGES</th>
                                    <th>ACCOUNT NO</th>
                                    <th>SETTINGS</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (System.Data.DataRow dr in ViewBag.data.Rows)
                                {
                                    <tr>
                                        <td>@dr["EMPLOYEEID"]</td>
                                        <td>@dr["EMPLOYEENAME"]</td>
                                        <td>@dr["SEX"]</td>
                                        <td>@dr["NID"]</td>
                                        <td>@dr["BASICSALARY"]</td>
                                        <td>@dr["GROSSWAGES"]</td>
                                        <td>@dr["ACCOUNTNO"]</td>
                                        <td>
                                            <a data-toggle="tooltip" title="Edit" class="btn pd-setting-ed" href="/Employee/Update?id=@dr["EMPLOYEEID"]"><i class='fa fa-pencil-square-o' aria-hidden='true'></i></a>
                                            <a data-toggle="tooltip" title="Delete" class="btn pd-setting-ed" href="/Employee/Delete?id=@dr["EMPLOYEEID"]"><i class='fa fa-trash-o' aria-hidden='true'></i></a>
                                            <a data-toggle="tooltip" title="Print" class="btn pd-setting-ed" href="/Employee/Print?id=@dr["EMPLOYEEID"]"><i class='fa fa-print' aria-hidden='true'></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="custom-pagination">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">Next</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


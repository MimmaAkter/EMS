                                                                <div class="form-group res-mg-t-15">
                                                                    <input name="SEX" value="@dr["SEX"]" type="text" class="form-control" placeholder="Date of Birth">                                                                </div>
                                                                <div class="form-group">
                                                                    <input name="EMPCONTACTNO"  value="@dr["EMPCONTACTNO"]" type="number" class="form-control" placeholder="Mobile no.">
                                                                </div>
                                                                <div class="form-group">
                                                                    @Html.DropDownList("DEPARTMENTID", ViewBag.DEPARTMENTID as SelectList, "Select Department", new { htmlAttributes = new { @class = "form-control", @name = "DEPARTMENTID" } })
                                                                </div>
                                                                <div class="form-group">
                                                                    <input name="BASICSALARY" value="@dr["BASICSALARY"]" type="text" class="form-control" placeholder="BASICSALARY">

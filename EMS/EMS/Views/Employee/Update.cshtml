                                                                </div>
                                                                <div class="form-group">
                                                                    <input name="NID" value="@dr["NID"]" type="text" class="form-control" placeholder="NID">
                                                                </div>
                                                                <div class="form-group alert-up-pd">
                                                                        <div class="dz-message needsclick download-custom">
                                                                            <input type="file" value="@dr["PHOTO"]" class="form-control" id="image" name="image" />
                                                                        </div>
                                                                    </div>
                                                            </div>
                                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                                
                                                                <div class="form-group">
                                                                    @Html.DropDownList("DESIGNATIONID", ViewBag.DESIGNATIONID as SelectList, "Select Designation", new { htmlAttributes = new { @class = "form-control", @name = "DESIGNATIONID", @value = "@dr['DESIGNATIONID']" } })                                                                
                                                                </div>
                                                                <div class="form-group">
                                                                    <input name="BASICSALARY" value="@dr["BASICSALARY"]" type="number" class="form-control" placeholder="BASICSALARY">
                                                                </div>
                                                                <div class="form-group">
                                                                    <input name="GROSSWAGES" value="@dr["GROSSWAGES"]" type="number" class="form-control" placeholder="GROSSWAGES">                                                                   
